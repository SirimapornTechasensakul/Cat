<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoyalKaninCatHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.5.0.min.js"
            integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ="
            crossorigin="anonymous"></script>
    <style>
        @@font-face {
            font-family: 'Kanit';
            src: url('/fonts/Kanit/Kanit-Regular.ttf');
        }

        @@font-face {
            font-family: 'Dancing';
            src: url('/fonts/Dancing_Script/static/DancingScript-Regular.ttf');
        }

        @@font-face {
            font-family: 'Erasdemi';
            src: url('/fonts/Erasdemi/ERASDEMI.ttf');
        }

        @@font-face {
            font-family: 'Mayton';
            src: url('/fonts/mayton/Mayton.ttf');
        }

        body {
            font-family: 'Kanit';
        }

        border {
            color: #112D4E;
        }

        a:link, a:visited {
            color: #112D4E;
        }

        a.on {
            color: darksalmon;
        }
    </style>
</head>
<body style="background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
        background-size: 100% 100%, auto;
        background-size: cover;
        background-image: url('../images/bg.png');">
    <header>
        <table height="50px" style="margin-top: 0px; background-color:#E8F0FF; padding: 0px;"
               width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <td width="10%">&nbsp;</td>
                <td width="100px" rowspan="2"><img src="/images/logo8.png"></td>
                <td>
                    <div style="font-family: 'Fira Sans'; display:block;text-align:right;margin-right:10%">
                        <a style="margin-right:25px" href="https://localhost:44306/Home/Login">Login</a>
                        <a href="@Url.Action("Register","Home")">Register</a>
                    </div>
                </td>
            </tr>
            <tr style="background-color: #112D4E;">
                <td height="30px">&nbsp;</td>
                <td align="left">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
                        <div class="container" style="font-family: 'Fira Sans'; background-color: #112D4E; vertical-align: bottom;">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-light" href="https://localhost:44306/Home/AboutUs">About us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" href="https://localhost:44306/Home/Room">Room</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" href="https://localhost:44306/Home/CatSitter">Cat Sitter</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </td>
            </tr>
        </table>

    </header>
    @RenderBody()

    <footer class="border-top footer text-muted" style="        background-color: #E8F0FF
">
        <div class="container">
            &copy; 2020 - RoyalKaninCatHotel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
